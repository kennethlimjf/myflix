%section.user.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest('knwang@gmail.com'.downcase)}?s=40")
          %h2 #{current_user.full_name}'s video collections (#{current_user.videos_count})
          %button.btn.btn-default Follow
        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            - current_user.queue_items.each do |q|
              %tr
                %td
                  = link_to q.video.title, video_path(q.video)
                %td
                  = link_to q.video.category.name, category_path(q.video.category)

%section.user_reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3 #{current_user.full_name}'s Reviews (#{current_user.reviews.size})
      %ul
        - current_user.reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %p
                  = link_to "\"#{review.video.title}\""
                %col Rating: #{review.rating} / 5
              .col-sm-8
                %p= review.body
