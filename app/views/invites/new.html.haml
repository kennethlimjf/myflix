%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag invite_path, method: 'post', class: 'invite' do
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = label_tag :friend_name, "Friend's Name"
            .row
              .col-sm-4
                = text_field_tag :friend_name, @friend_name, class: 'form-control'
          .form-group
            = label_tag :friend_email, "Friend's Email Address"
            .row
              .col-sm-4
                = email_field_tag :friend_email, @friend_email, class: 'form-control'
          .form-group
            = label_tag :message, "Invitation Message"
            .row
              .col-sm-6
                = text_area_tag :message, @message, class: 'form-control', rows: 6
        %fieldset.form-group.action
          = submit_tag "Send Invitation", class: 'btn btn-default'
          
