%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for @video, url: admin_videos_path, method: 'post', layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6" do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              = link_to "Add a New Video", new_admin_video_path

          %br
          %fieldset
            = f.text_field :title
            = f.select :category, options_for_select(category_options(@categories), @video.category) 
            = f.text_area :description, rows: 8
            = f.file_field :large_cover_url, label: "Large Cover" 
            = f.file_field :small_cover_url, label: "Small Cover" 
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit "Add Video", class: "btn btn-default"